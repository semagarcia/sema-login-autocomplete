{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.0",
  "default_locale" : "en",
  "description" : "Bla, bla, bla",
  "author" : "Sema (José Manuel García García)",
  "browser_action" : {   // This is how you load Browser Action. Nearly equal to Page one
      "default_icon" : "icons/16/s2.png",
      "default_title" : "Sema Login Autocompleter Extension",
      "default_popup" : "browser/browser-action.html"
  },
  "background" : {
    "scripts" : ["libs/jquery.js", "background/background.js"],
    "persistent" : false
  },
  "commands" : {
    "_execute_browser_action" : {
      "suggested_key" : {
        "windows" : "Ctrl+Shift+S",
        "mac" : "Command+Shift+S",
        "chromeos" : "Ctrl+Shift+S",
        "linux" : "Ctrl+Shift+S"
      }
    }
  },
  "content_scripts": [   // If we need access to the DOM, we have to use a content script
    {
      "matches": ["<all_urls>"],  // "*://*/*"
      "css": ["styles/main.css"],
      "js": [
        "libs/jquery.js",
        "content/content.js"
      ],
      "run_at" : "document_end"
    }
  ],
  "icons" : {
    "16" : "icons/16/s2.png",  // Used as the favicon for an extension's pages
    "48" : "icons/48/s2.png",   // Used in the extensions management page (chrome://extensions)
    "128" : "icons/128/s2.png"     // Used during installation and by the Chrome Web Store
  },
  "offline_enabled" : true,
  "options_page": "options/options.html",   // Gives access to extension options from Extensions Manager
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions" : [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "storage",
    "tabs",
    "*://*/*"
  ]
}